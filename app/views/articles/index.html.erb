<p id="notice"><%= notice %></p>

<h1 class="center">Articles</h1>

<div class="container">
  <% @articles.each do |article| %>
      <div class="divider">
       <div class="section">
        <h3><%= article.title %></h3>

       </div>

      </div>
      <div class="divider">
        <div class="section">
            <p><%= article.body %></p>

        </div>

      
      </div>


  <% end %>


</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="section"><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
