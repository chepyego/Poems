

<h1 class="center">Articles</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col col s12 l12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <h3 class="card-title"><%= article.title %></h3>
            <p><%= article.body %></p>
            <p class="button"><%= link_to 'Read', article, class:"btn waves-effect waves-light white-text" %></p>
            <p><%= link_to 'Edit', edit_article_path(article), class:"black-text" %></p>
            <p><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "blue-text" %></p>
            <div id="new-div">
              <%= link_to 'New Article', new_article_path, class:"btn-floating btn-large waves-effect waves-light red" %>
          </div>
        </div>
      </div>
    </div>  
  <% end %>
</div>
