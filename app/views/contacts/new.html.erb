<div class="container">
  <div class="row">
  <div class="col s12">
    <h4>Contact Form</h4>
    <%= form_for @contact do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name %><br>
          <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
           <%= f.label :email %><br>
           <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>
        </div>
      </div>
        
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :message %><br>
          <%= f.text_area :message,  required: true, class: "contact-form-text-area", 
              placeholder: "Send me a message"%><br>
        </div>
      
      </div>
        
      <div class="row">
        <div class="input-field col s12">
          <div class= "hide">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
          </div>
        </div>
      </div>
        <%= f.submit 'Send Message', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

</div>

</div>

