


<div class="container">
<div class="row">
   <div class="col s6">
    <h5>Add comment</h5>

<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  
  
  
  <p>
    <%= form.label :user %><br>
    <%= form.text_field :user%>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

</div>
</div>
</div>